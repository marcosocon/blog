<div class="formulario" style="width:60%; margin: 0 auto;">
	<h1 align="center"><%= name %> Artículo</h1>
	<%= form_for(@article) do |f|%>
		<% @article.errors.full_messages.each do |message| %>
		<div>
			* <%= message %>
		</div>
		<%end%>
	<div class="field">
		<h2>Titulo</h2>
		<br>
		<%= f.text_field :title, placeholder: "Título", class:"form-control"%>
	</div>
	<div class="field">
		<h2>Cuerpo del post</h2>
		<br>
		<%= f.text_area :body, placeholder: "Descripción", class:"form-control", style:"height: 200px"%>
	</div>
	<div class="field">
		<h2>Añadir Portada.</h2>
		<%= f.file_field :cover%>
	</div>
	<div class="field">
		<%= f.submit "GUARDAR POST", class:"btn btn-info"%>
	</div>
	<%end%>
</div>